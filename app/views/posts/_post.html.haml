%div[post]{:class => (current_page? post) ? nil : 'hentry'}
	-title = link_to_unless_current(post.title, post, :rel => 'bookmark')
	-if current_page? post
		%h1= title
	-else
		%h2.entry-title= title
	-cache post do
		=render :partial => 'common/times', :format => 'html', :object => post
		.tags= render :partial => 'tags/tags', :object => post.tags
		.entry-content= render :partial => 'common/body', :format => 'html', :object => post.body
