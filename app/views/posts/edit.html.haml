=titleh1 (@post.id ? "Editing post" : "New post")

-form_for @post do |f|
	=f.error_messages

	.field
		=f.label :name
		=f.text_field :name

	.field
		=f.label :title
		=f.text_field :title
	.field
		=f.label :tag_list
		=f.text_field :tag_list
	.field
		=f.check_box :draft
		=f.label :draft
	.field
		.label
			=f.label :body
		~f.text_area :body, :onkeydown => 'checkTab(this,event)'
	.submit= f.submit(@post.id ? 'Update' : 'Create')
