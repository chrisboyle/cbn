!!! 5
%html{html_attrs('en-GB')}
	%head
		%meta{'http-equiv' => 'content-type', :content => 'text/html;charset=UTF-8'}
		%title<
			-title = yield :title
			=(title ? (title+" - ") : "") + SITE_NAME
		%link{:rel => 'shortcut icon', :href => image_path('favicon.png'), :type => 'image/png'}
		=auto_discovery_link_tag :atom, feed_path(:atom) if controller.controller_name == 'pages'
		=stylesheet_link_tag :all, :recursive => true, :cache => true
		=javascript_include_tag :all, :cache => true
		=yield :head

	%body
		#page
			#tree
				=render :partial => 'pages/tree', :object => StaticPage.all

			#identblock
				-if current_user
					=ident_html current_user.identity
					=button_to 'Sign out', {:controller => :user_sessions, :action => :destroy}, :method => :delete
				-else
					=link_to 'Sign in', :controller => :user_sessions, :action => :new

			#content
				-if flash[:notice]
					.notice= flash[:notice]
				-if flash[:warning]
					.warning= flash[:warning]
				-if flash[:error]
					.error= flash[:error]

				=yield
