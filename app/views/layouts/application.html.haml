!!! 5
%html{html_attrs('en-GB')}
	%head
		%meta{'http-equiv' => 'content-type', :content => 'text/html;charset=UTF-8'}
		%title<
			-title = yield :title
			=(title ? (title+" - ") : "") + SITE_NAME
		%link{:rel => 'shortcut icon', :href => image_path('favicon.png'), :type => 'image/png'}
		=auto_discovery_link_tag :atom, feed_path if controller.controller_name == 'pages'
		=stylesheet_link_tag :all, :recursive => true, :cache => true
		=javascript_include_tag :all, :cache => true
		=yield :head

	%body
		#page
			=render 'user_sessions/identblock'

			#tree
				=render :partial => 'pages/tree', :object => StaticPage.all

			#content{:class => controller && controller.controller_name || nil}
				-if flash[:notice]
					.notice= flash[:notice]
				-if flash[:warning]
					.warning= flash[:warning]
				-if flash[:error]
					.error= flash[:error]

				=yield
