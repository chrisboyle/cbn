!!! 5
%html{html_attrs('en-GB')}
	%head
		%meta{'http-equiv' => 'content-type', :content => 'text/html;charset=UTF-8'}
		%title
			-title = yield :title
			-if title
				#{title} - 
			Chris Boyle
		%link{:rel => 'shortcut icon', :href => image_path('favicon.png'), :type => 'image/png'}
		=auto_discovery_link_tag :atom, feed_path(:atom) if controller.controller_name == 'pages'
		=stylesheet_link_tag :all, :recursive => true, :cache => true
		=javascript_include_tag :all, :cache => true

	%body
		#page
			#tree
				=render :partial => 'tree', :object => Page.all(:conditions => "type != 'Post'")

			#identblock
				=link_to 'Sign in', :controller => :sessions, :action => :new

			#content
				-if flash[:notice]
					.notice= flash[:notice]

				=yield
