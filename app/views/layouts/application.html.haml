!!! 5
%html{html_attrs('en-GB')}
	%head
		%meta{'http-equiv' => 'content-type', :content => 'text/html;charset=UTF-8'}
		%title #{controller.controller_name.capitalize}: #{controller.action_name}
		%link{:rel => 'shortcut icon', :href => image_path('favicon.png'), :type => 'image/png'}
		=auto_discovery_link_tag :atom, pages_path(:atom) if controller.controller_name == 'pages'
		=stylesheet_link_tag :all, :recursive => true, :cache => true
		=javascript_include_tag :all, :cache => true

	%body
		#page
			#tree
				%ul
					%li about
					%li
						blog
						%ul
							%li 2009
							%li
								2010
								%ul
									%li
										April
										%ul
											%li Hello, world
					%li contact
					%li projects

			#identblock
				=link_to 'Sign in', '/login'

			#content
				-if flash[:notice]
					.notice= flash[:notice]

				=yield
