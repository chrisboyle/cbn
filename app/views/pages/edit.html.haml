-t = @page.class.name.underscore.titleize
=titleh1 (@page.id ? "Editing #{t}" : "New #{t}")

-form_for @page do |f|
	=f.error_messages

	.field
		=f.select :type, %w(Post StaticPage) unless @page.id
		=f.text_field :name

	.field
		=f.label :title
		=f.text_field :title
	-if @page.is_a? Post
		.field
			=f.label :tag_list
			=f.text_field :tag_list
	.field
		.label
			=f.label :body
		~f.text_area :body, :onkeydown => 'checkTab(this,event)'
	.submit= f.submit(@page.id ? 'Update' : 'Create')
