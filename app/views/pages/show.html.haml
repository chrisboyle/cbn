-title(@page.title)
=render :partial => @page

%p
	-if permitted_to? :edit, @page
		=link_to 'Edit', edit_page_path(@page)
		|
	-if permitted_to? :destroy, @page
		=link_to 'Destroy', @page, :method => :delete, :confirm => "Are you sure?"

-if @page.is_a? Post
	#comments
		=render :partial => @page.comments

	-if permitted_to? :create, [@page, Comment.new]
		-remote_form_for [@page, Comment.new] do |f|
			%p
				=f.label :body, "New comment"
				%br/
				=f.text_area :body
			%p= f.submit "Add comment"
