-title(@page.title)
=render :partial => @page

.controls
	-if permitted_to? :edit, @page
		=link_to 'Edit', edit_page_path(@page)
		|
	-if permitted_to? :destroy, @page
		=link_to 'Destroy', @page, :method => :delete, :confirm => "Are you sure?"

-if @page.is_a? Post
	#comments
		=render :partial => @page.comments

	-if permitted_to? :create, Comment.new(:page => @page)
		#addcomment
			-remote_form_for [@page, Comment.new] do |f|
				%p
					=f.label :body, "New comment"
					%br/
					=f.text_area :body
				%p= f.submit "Add comment"

	-elsif not current_user
		#addcomment
			=link_to 'Add a comment', new_post_comment_path
