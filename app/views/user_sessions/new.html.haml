=titleh1 "Sign in"
-form_for @user_session do |f|
	=f.error_messages
	.field
		=f.label :openid_identifier, 'OpenID'
		=f.text_field :openid_identifier, :class => 'openid_identifier'
	.field<
		=f.check_box :remember_me
		=f.label :remember_me
	=f.submit "Sign in", :disable_with => 'Signing in&hellip;'
