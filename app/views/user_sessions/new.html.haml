-content_for :head, javascript_include_tag('http://static.ak.connect.facebook.com/js/api_lib/v0.4/FeatureLoader.js.php')
=titleh1 "Sign in"
-form_for @user_session do |f|
	=f.error_messages
	.field
		=f.label :openid_identifier, 'OpenID'
		=f.text_field :openid_identifier, :class => 'openid_identifier'
	.field<
		=f.check_box :remember_me
		=f.label :remember_me
	=f.submit "Sign in", :disable_with => 'Signing in&hellip;'
=fb_connect_javascript_tag
=init_fb_connect "XFBML"
=authlogic_facebook_login_button(:controller => 'session')  # not really that controller, but ALFB generates wrong URLs...
